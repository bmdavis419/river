{
	"name": "@davis7dotsh/river",
	"description": "main repo for river: the tanstack query like experience for consuming streams",
	"version": "0.0.1",
	"homepage": "https://github.com/bmdavis419/river",
	"contributors": [
		{
			"name": "Ben Davis",
			"url": "https://davis7.sh"
		}
	],
	"main": "index.js",
	"repository": {
		"type": "git",
		"url": "https://github.com/bmdavis419/river"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run prepack",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"prepack": "svelte-kit sync && svelte-package && publint",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check ."
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@sveltejs/adapter-vercel": "^5.10.3",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/package": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@tailwindcss/typography": "^0.5.15",
		"@tailwindcss/vite": "^4.0.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"publint": "^0.3.2",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.0.0",
		"typescript": "^5.0.0",
		"vite": "^7.0.4"
	},
	"keywords": [
		"svelte",
		"sveltekit",
		"streams",
		"web streams",
		"ai"
	],
	"dependencies": {
		"@lucide/svelte": "^0.544.0",
		"marked": "^16.3.0",
		"neverthrow": "^8.2.0",
		"runed": "^0.34.0",
		"zod": "^4.1.11"
	}
}
